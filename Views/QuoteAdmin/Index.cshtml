@model List<QuoteGeneratorAPI.Models.Quote>

@{
    ViewData["Title"] = "Quote Generator";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}


<!-- Add Quote Form -->
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div>
        <label for="Author">Author:</label>
        <input type="text" id="Author" name="Author" required>
    </div>
    <div>
        <label for="QuoteText">Quote:</label>
        <input type="text" id="QuoteText" name="QuoteText" required>
    </div>
    <div>
        <label for="Permalink">Permalink (optional):</label>
        <input type="url" id="Permalink" name="Permalink">
    </div>
    <div>
        <label for="Image">Image:</label>
        <input type="file" id="Image" name="Image">
    </div>
    <button type="submit">Add Quote</button>
</form>

<!-- Delete Quote Section -->
<form asp-action="Delete" method="post">
    <div>
        <label for="quoteToDelete">Select a Quote to Delete:</label>
        <select id="quoteToDelete" name="Id">
            @foreach (var quote in Model)
            {
                <option value="@quote.Id">@quote.Author - @quote.QuoteText</option>
            }
        </select>
    </div>
    <button type="submit" onclick="return confirm('Are you sure you want to delete this?');">Delete Quote</button>
</form>
